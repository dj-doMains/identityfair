@{
    string subject = User.Claims.Where(x => x.Type == "sub").FirstOrDefault()?.Value;
}

@if (!string.IsNullOrEmpty(subject))
{
    <form asp-controller="Account" asp-action="SignOut" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a>Hello @subject!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-page="/SignIn">Log in</a></li>
    </ul>
}